module NavigationHelpers
  def path_to(page_name)
    case page_name
    when /the home page/i
      "/"
    else
      if page_name.include? "/"
        page_name # page_name is already a path
      else
        raise "Can't find mapping from \"#{page_name}\" to a path."
      end
    end
  end
end

World(NavigationHelpers)